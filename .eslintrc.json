{
    "extends": "airbnb",
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
        "new-cap": ["error", { "capIsNewExceptions": ["Router"] }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "^Promise$" }],
        "no-param-reassign": "off",
        "consistent-return": "off",
        "max-nested-callbacks": ["error", 3],
        "max-len": ["error", { "code": 100, "comments": 80 }]
    }
}
